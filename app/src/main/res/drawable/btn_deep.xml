<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="@color/light_red" android:endColor="@color/light_red"
                android:angle="180" />
            <stroke android:width="1dip" android:color="@color/light_red" />
            <corners android:radius="0dp" />
            <padding android:left="0dp" android:top="0dp"
                android:right="0dp" android:bottom="0dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="@color/deep_red" android:endColor="@color/deep_red"
                android:angle="180" />
            <stroke android:width="1dip" android:color="@color/light_red" />
            <corners android:radius="0dp" />
            <padding android:left="0dp" android:top="0dp"
                android:right="0dp" android:bottom="0dp" />
        </shape>
    </item>
</selector>