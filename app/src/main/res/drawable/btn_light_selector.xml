<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="180" android:endColor="@color/aty_bg_color" android:startColor="@color/aty_bg_color" />
            <stroke android:width="1dip" android:color="@color/aty_bg_color" />
            <corners android:radius="2dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="180" android:endColor="@color/item_bg_color" android:startColor="@color/item_bg_color" />
            <stroke android:width="1dip" android:color="@color/item_bg_color" />
            <corners android:radius="5dip" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
</selector>