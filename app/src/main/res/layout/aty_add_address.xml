<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aty_bg_color"
    android:padding="10dp"
    tools:context=".activity.mine.ModifyAddressAty">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/aty_rounded_selector">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="1"
            android:stretchColumns="1">

            <TableRow android:padding="5dp">

                <TextView
                    style="@style/SimpleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="联系人：" />

                <EditText
                    android:id="@+id/etName"
                    style="@style/EditTextSelector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp" />
            </TableRow>

            <TableRow android:padding="5dp">

                <TextView
                    style="@style/SimpleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="联系电话：" />

                <EditText
                    android:id="@+id/etTel"
                    style="@style/EditTextSelector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp" />
            </TableRow>


            <TableRow android:padding="5dp">


                <TextView
                    style="@style/SimpleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="收货地址：" />

                <EditText
                    android:id="@+id/etAddress"
                    style="@style/EditTextSelector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:isScrollContainer="true"
                    android:maxLines="6"
                    android:minLines="6"
                    android:singleLine="false"
                    android:textSize="@dimen/small_text_size" />
            </TableRow>

        </TableLayout>

        <TextView
            android:id="@+id/tvServiceTel"
            style="@style/ServiceTel" />

        <Button
            android:id="@+id/btnSubmit"
            style="@style/LightBtn"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_above="@+id/tvServiceTel"
            android:layout_centerHorizontal="true"
            android:text="确认提交" />
    </RelativeLayout>
</RelativeLayout>
