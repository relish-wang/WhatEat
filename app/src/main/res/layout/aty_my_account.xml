<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aty_bg_color"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".activity.mine.MyAccountAty">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/aty_rounded_selector">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/SimpleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户名: " />

                <TextView
                    android:id="@+id/tvUsername"
                    style="@style/SimpleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="13785652511" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/flTel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/RoundedLayout"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvPhoneText"
                        style="@style/SimpleTextView"
                        android:padding="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已绑定手机号: " />

                    <TextView
                        android:id="@+id/tvTelBound"
                        style="@style/SimpleTextView"
                        android:padding="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13785652511" />

                </LinearLayout>

                <TextView
                    style="@style/SimpleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end|center_vertical"
                    android:layout_gravity="center_vertical"
                    android:text=">>" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/flModifyPwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    style="@style/RoundedTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="修改账户密码" />

                <TextView
                    style="@style/SimpleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end|center_vertical"
                    android:text=">>" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/flFamilyGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    style="@style/RoundedTextView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="我的家庭组" />

                <TextView
                    style="@style/SimpleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end|center_vertical"
                    android:text=">>" />

            </FrameLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvServiceTel"
            style="@style/ServiceTel" />

        <Button
            android:id="@+id/btnLogout"
            style="@style/LightBtn"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_above="@+id/tvServiceTel"
            android:layout_centerHorizontal="true"
            android:text="退出登录" />
    </RelativeLayout>
</RelativeLayout>
